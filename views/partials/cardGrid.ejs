<!-- container for mini cards -->
<div class="container-fluid">
    <div class="row">
        <!-- embedded JavaScript code to get the cards from the server -->
        <% cards.forEach(card => { %>
            <div class="col p-3">
                <div class="card">
                    <!-- card image -->
                    <img width="250" height="175" class="card-img-top card-image" src="<%= card.cardImagePath %>" />
                    <div class="card-body">
                        <!-- card name -->
                        <h5 class="card-title">
                            <%= card.cardName %>
                        </h5>
                        <!-- link to see the full card -->
                        <a class="card-link link-primary" href="/cards/<%= card.id %>">
            Click to see the card
          </a>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
</div>